# editorconfig.org

root = true

#
# Global
#
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

#
# Man page files
#
[*.{ronn}]
trim_trailing_whitespace = false
insert_final_newline = false

#
# Markdown
#
[*.{md,markdown}]
trim_trailing_whitespace = false
